class Solution:
    def countSubarrays(self, arr):
        n = len(arr)
        stack = []
        next_smaller = [n] * n   # Default: no smaller element
        
        # Step 1: Find Next Smaller Element index for each position
        for i in range(n):
            while stack and arr[stack[-1]] > arr[i]:
                idx = stack.pop()
                next_smaller[idx] = i
            stack.append(i)
        
        # Step 2: Count valid subarrays
        count = 0
        for i in range(n):
            count += next_smaller[i] - i
        
        return count

