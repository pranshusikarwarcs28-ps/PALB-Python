class Solution:
    def has132Pattern(self, arr):
        n = len(arr)
        if n < 3:
            return False
        
        stack = []
        third = float('-inf')  # candidate for arr[k]
        
        # Traverse from right to left
        for i in range(n - 1, -1, -1):
            
            # If current element is less than third,
            # we found arr[i] < arr[k]
            if arr[i] < third:
                return True
            
            # Maintain decreasing stack
            while stack and arr[i] > stack[-1]:
                third = stack.pop()
            
            stack.append(arr[i])
        
        return False
