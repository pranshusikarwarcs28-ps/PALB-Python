class Solution:
    def minMen(self, arr):
        n = len(arr)
        intervals = []
        
        # Convert arr into valid intervals
        for i in range(n):
            if arr[i] != -1:
                left = max(0, i - arr[i])
                right = min(n - 1, i + arr[i])
                intervals.append((left, right))
        
        # Sort intervals by starting point
        intervals.sort()
        
        count = 0
        i = 0
        covered_end = 0
        
        # Greedy covering
        while covered_end < n:
            farthest = covered_end
            
            while i < len(intervals) and intervals[i][0] <= covered_end:
                farthest = max(farthest, intervals[i][1] + 1)
                i += 1
            
            # If we can't extend coverage
            if farthest == covered_end:
                return -1
            
            covered_end = farthest
            count += 1
        
        return count
