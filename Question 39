class Solution:
    def sortColors(self, nums):
        """
        :type nums: List[int]
        :rtype: None
        Do not return anything, modify nums in-place instead.
        """
        left = 0          # Pointer for next position of 0
        right = len(nums) - 1  # Pointer for next position of 2
        current = 0       # Current index
        
        while current <= right:
            if nums[current] == 0:
                nums[left], nums[current] = nums[current], nums[left]
                left += 1
                current += 1
            elif nums[current] == 2:
                nums[right], nums[current] = nums[current], nums[right]
                right -= 1
            else:  # nums[current] == 1
                current += 1
